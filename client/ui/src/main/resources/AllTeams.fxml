<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root fx:id="hBox" type="HBox" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
 <VBox HBox.hgrow="ALWAYS">
     <HBox.margin>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
     </HBox.margin>
     <HBox maxHeight="25.0" VBox.vgrow="ALWAYS">
         <VBox.margin>
             <Insets bottom="5.0" right="5.0" top="5.0" />
         </VBox.margin>
         <TextField promptText="Mannschaft suchen" />
         <Button fx:id="searchButton" mnemonicParsing="false" text="Suchen">
             <HBox.margin>
                 <Insets left="5.0" />
             </HBox.margin>
         </Button>
         <Button fx:id="newButton" mnemonicParsing="false" onAction="#createTeam" text="Mannschaft erstellen">
             <HBox.margin>
                 <Insets left="5.0" />
             </HBox.margin>
         </Button>
         <Button fx:id="addMember" mnemonicParsing="false" text="Mitglieder hinzufügen">
            <HBox.margin>
               <Insets left="5.0" />
            </HBox.margin>
         </Button>
     </HBox>
     <TableView fx:id="table" onMouseClicked="#clickItem" VBox.vgrow="ALWAYS">
         <columns>
             <TableColumn fx:id="nameTable" prefWidth="150.0" text="Name" />
             <TableColumn fx:id="leagueTable" minWidth="0.0" prefWidth="154.0" text="Liga" />
             <TableColumn fx:id="typeTable" minWidth="0.0" prefWidth="154.0" text="Typ" />
         </columns>
         <columnResizePolicy>
             <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
     </TableView>
 </VBox>
     <VBox fx:id="memberDetailBox" maxWidth="400.0" HBox.hgrow="ALWAYS">
         <HBox.margin>
             <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </HBox.margin>
         <HBox maxHeight="25.0" VBox.vgrow="ALWAYS">
             <VBox.margin>
                 <Insets bottom="5.0" right="5.0" top="5.0" />
             </VBox.margin>
             <Label text="Mannschaftsdaten">
                 <font>
                     <Font size="15.0" />
                 </font>
             </Label>
         </HBox>
         <GridPane>
             <columnConstraints>
                 <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="100.0" />
                 <ColumnConstraints hgrow="SOMETIMES" maxWidth="107.0" minWidth="10.0" prefWidth="107.0" />
                 <ColumnConstraints hgrow="SOMETIMES" maxWidth="104.0" minWidth="10.0" prefWidth="93.0" />
             </columnConstraints>
             <rowConstraints>
                 <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                 <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                 <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
             </rowConstraints>
             <Label text="Type:" />
             <Label text="Name:" GridPane.rowIndex="1" />
             <RadioButton fx:id="internRadio" mnemonicParsing="false" selected="true" text="intern" GridPane.columnIndex="1">
                 <toggleGroup>
                     <ToggleGroup fx:id="type" />
                 </toggleGroup>
             </RadioButton>
             <RadioButton fx:id="externRadio" mnemonicParsing="false" text="extern" toggleGroup="$type" GridPane.columnIndex="2" />
             <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
             <Label fx:id="ligaNameLabel" text="Liga:" GridPane.rowIndex="3" />
             <ComboBox fx:id="leagueBox" prefWidth="107.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         <Label fx:id="sportNameLabel" text="Sportart:" GridPane.rowIndex="2" />
         <ComboBox fx:id="sportBox" prefWidth="107.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </GridPane>
         <HBox fx:id="trainerBox" prefHeight="28.0" prefWidth="200.0">
             <VBox.margin>
                 <Insets top="2.0" />
             </VBox.margin>
             <Label contentDisplay="CENTER" prefWidth="100.0" text="Trainer:">
            <HBox.margin>
               <Insets top="5.0" />
            </HBox.margin></Label>
             <VBox fx:id="trainerComboVBox" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                 <ComboBox fx:id="trainerCombo" prefWidth="107.0">
               <VBox.margin>
                  <Insets top="1.0" />
               </VBox.margin></ComboBox>
            <HBox maxWidth="107.0" prefHeight="100.0" prefWidth="107.0">
               <children>
                  <Button fx:id="plusButton1" minWidth="30.0" mnemonicParsing="false" onAction="#addComboBox" prefHeight="30.0" prefWidth="30.0" text="+">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Button>
                       <Button fx:id="minusButton" minWidth="30.0" mnemonicParsing="false" onAction="#deleteComboBox" prefHeight="30.0" prefWidth="30.0" text="-">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="2.0" />
                     </HBox.margin>
                       </Button>
               </children>
               <VBox.margin>
                  <Insets top="2.0" />
               </VBox.margin>
            </HBox>
             </VBox>
         </HBox>
      <HBox alignment="BOTTOM_RIGHT" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="changeButton" mnemonicParsing="false" text="Ändern" />
            <Button fx:id="saveButton" mnemonicParsing="false" text="Speichern">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
     </VBox>
</fx:root>
