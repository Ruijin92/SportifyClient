<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root fx:id="hBox" type="HBox" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox HBox.hgrow="ALWAYS">
            <children>
                <HBox maxHeight="25.0" VBox.vgrow="ALWAYS">
                    <children>
                        <TextField promptText="Mannschaft suchen" />
                        <Button fx:id="searchButton" mnemonicParsing="false" text="Suchen">
                            <HBox.margin>
                                <Insets left="5.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="changeButton" mnemonicParsing="false" onAction="#changeTeam" text="Mannschaft Ã¤ndern">
                            <HBox.margin>
                                <Insets left="5.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="newButton" mnemonicParsing="false" onAction="#createTeam" text="Mannschaft erstellen">
                            <HBox.margin>
                                <Insets left="5.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets bottom="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                </HBox>
            <TableView VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn prefWidth="150.0" text="Name" />
                <TableColumn minWidth="0.0" prefWidth="154.0" text="Liga" />
                  <TableColumn minWidth="0.0" prefWidth="154.0" text="Typ" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            </children>
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </HBox.margin>
        </VBox>
    </children>
</fx:root>
