<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.ListSelectionView?>

<fx:root fx:id="hBox" type="HBox" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <VBox HBox.hgrow="ALWAYS">
        <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </HBox.margin>
        <HBox alignment="CENTER_LEFT" maxHeight="25.0" VBox.vgrow="ALWAYS">
            <ComboBox fx:id="sportsCombo" prefWidth="150.0" promptText="Sportart">
                <HBox.margin>
                    <Insets bottom="2.0" right="5.0" />
                </HBox.margin>
            </ComboBox>
            <ComboBox fx:id="leagueCombo" prefWidth="150.0" promptText="Liga">
                <HBox.margin>
                    <Insets bottom="2.0" right="5.0" />
                </HBox.margin>
            </ComboBox>
            <Label text="Datum">
                <HBox.margin>
                    <Insets bottom="2.0" right="5.0" />
                </HBox.margin>
            </Label>
            <DatePicker fx:id="datePick" prefHeight="25.0" prefWidth="111.0">
                <HBox.margin>
                    <Insets bottom="2.0" right="5.0" />
                </HBox.margin>
            </DatePicker>
            <Label text="Uhrzeit">
                <HBox.margin>
                    <Insets bottom="2.0" right="5.0" />
                </HBox.margin>
            </Label>
            <TextField fx:id="time" prefHeight="25.0" prefWidth="112.0">
                <HBox.margin>
                    <Insets bottom="2.0" />
                </HBox.margin>
            </TextField>
        </HBox>
      <ListSelectionView fx:id="listView" />
        <HBox alignment="CENTER_LEFT" maxHeight="25.0" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets bottom="5.0" right="5.0" top="5.0" />
            </VBox.margin>
         <children>
            <Label text="Externe Mannschaft">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="teamName" promptText="Name der Mannschaft">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </TextField>
            <Button mnemonicParsing="false" onAction="#addExternTeam" text="HinzufÃ¼gen" />
         </children>
        </HBox>
    </VBox>
</fx:root>
